@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Изменение пароля";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row login">
    <div class="col-md-8 col-md-offset-2">
        <h2>Изменение пароль</h2>
        <hr />
        <form asp-action="ChangePassword" asp-controller="Account">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Email" />
            <div class="form-group">
                <div class="input-group input-group-sm">
                    <span class="input-group-addon">
                        <span class="fa fa-user"></span>
                    </span>
                    <input asp-for="ShortName" type="text" class="form-control" readonly="readonly" />
                </div>
            </div>
            <div class="form-group">
                <div class="input-group input-group-sm">
                    <span class="input-group-addon">
                        <span class="fa fa-envelope"></span>
                    </span>
                    <input asp-for="Email" type="text" class="form-control" readonly="readonly" />
                </div>
            </div>
            <div class="form-group">
                <div class="input-group input-group-sm">
                    <span class="input-group-addon">
                        <span class="fa fa-key"></span>
                    </span>
                    <input asp-for="NewPassword" type="password" class="form-control" placeholder="Введите новый пароль" />
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-outline-dark" />
            </div>
        </form>
    </div>
</div>

