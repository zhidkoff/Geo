@model LoginViewModel

@{
    ViewData["Title"] = "Вход";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row login">
    <div class="col-md-4 col-md-offset-4">
        <h2>Вход</h2>
        <form method="post" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <input class="form-control" type="email" asp-for="Email" placeholder="E-mail" required="required" />
            </div>
            <div class="form-group">
                <input class="form-control" type="password" asp-for="Password" placeholder="Пароль" required="required" />
            </div>
            <div class="form-group">
                <input class="btn btn-default form-control" type="submit" value="Войти" />
            </div>
        </form>
    </div>
</div>

