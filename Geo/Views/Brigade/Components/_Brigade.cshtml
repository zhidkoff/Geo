@model List<Employee>

@if (Model?.Count > 0)
{
    <h3>Члены бригады</h3>
    <table class="table table-hover text-center">
        <thead>
            <tr>
                <th class="text-center">#</th>
                <th class="text-center">ФИО</th>
                <th class="text-center"></th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 1; i < Model.Count + 1; i++)
            {
                <tr>
                    <td>@i</td>
                    <td>@Model[i - 1].ShortName</td>
                    <td>
                        <a asp-action="DelAjax" title="Удалить" asp-route-Id="@Model[i-1].Id" data-ajax="true" data-ajax-mode="replace" data-ajax-update="#brigades" data-ajax-cache="true">
                            <span class="fa fa-remove"></span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
